{
  "name": "gitflow-for-pms",
  "version": "0.1.0",
  "description": "MCP Server enabling non-technical Product Managers to manage Git/GitHub workflows through AI IDEs",
  "author": "GitFlow Team",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc && cp -r src/db/migrations dist/db/",
    "build:watch": "tsc --watch",
    "dev": "npm run build && node dist/index.js",
    "dev:watch": "nodemon --watch src --ext ts --exec 'npm run build && node dist/index.js'",
    "start": "node dist/index.js",
    "lint": "eslint 'src/**/*.ts' --fix",
    "lint:check": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "prepare": "npm run build",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:restart": "docker compose restart",
    "docker:clean": "docker compose down -v --rmi local",
    "docker:dev": "docker compose up -d db redis && npm run dev",
    "migrate": "npm run build && node dist/db/migrate.js",
    "migrate:status": "npm run build && node dist/db/migrate.js --status",
    "migrate:dry-run": "npm run build && node dist/db/migrate.js --dry-run",
    "db:reset": "docker compose down -v && docker compose up -d db redis"
  },
  "keywords": [
    "mcp",
    "git",
    "github",
    "product-manager",
    "ai-ide",
    "cursor",
    "claude-code"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gitflow-for-pms/gitflow-for-pms"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@octokit/rest": "^22.0.1",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "keytar": "^7.9.0",
    "pg": "^8.17.1",
    "pino": "^10.2.0",
    "simple-git": "^3.30.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.8",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
